<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OrderConfirmation">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Order Confitmation" />

    </android.support.design.widget.AppBarLayout>


    <TextView
        android:text="Cheers !!!! Your Order has been successfully placed. The items will be delivered to you in next 5 working days. Thank You."
        android:textSize="20dp"
        android:layout_below="@+id/appBar"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_done_green_600_48dp"
        android:layout_centerInParent="true"
        android:id="@+id/ivOrderConf"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/tvSuccess"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ivOrderConf"
        android:text="Order Successfully Placed."
        android:textColor="@color/md_green_800"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@+id/tvSuccess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/md_blue_500"
        android:text="Go Back"
        android:textColor="@color/white"
        android:id="@+id/btnGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>