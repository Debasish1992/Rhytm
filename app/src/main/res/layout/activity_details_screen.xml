<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DetailsScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@color/black">


                <ImageView
                    android:id="@+id/ivGuitarImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_arrow_back_white_36dp" />

                <ImageView
                    android:id="@+id/inCart"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_shopping_cart_white_24dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_add_shopping_cart_red_400_36dp"
                    app:backgroundTint="@color/white" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/white"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:paddingBottom="30dp">

                    <TextView
                        android:id="@+id/tvProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_toLeftOf="@+id/tvGuitarPrice"
                        android:text="Nice Guitsar"
                        android:textColor="@color/black"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/tvProductModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvProductName"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/tvGuitarPrice"
                        android:text="Nice Guitsar"
                        android:textSize="15dp" />


                    <TextView
                        android:id="@+id/tvGuitarPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:text="123330.00"
                        android:textColor="@color/md_red_300" />

                    <ImageView
                        android:id="@+id/ivFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tvGuitarPrice"
                        android:layout_marginRight="15dp"
                        android:visibility="gone"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_favorite_border_red_400_24dp" />


                    <TextView
                        android:id="@+id/tvAdditionalCharges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvProductModel"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Addition taxes may apply at checkout"
                        android:textColor="@color/md_red_A400" />

                    <TextView
                        android:id="@+id/tvProductDetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvAdditionalCharges"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Product Details"
                        android:textColor="@color/black"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/productDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvProductDetailText"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Lorem ipsum dolor sit amet, est ut causae alienum. Quas quodsi accusata has ei, detracto euripidis efficiendi vix ut, sea aeterno nonumes at. Ad qui erant vivendo detracto, ut qui affert voluptaria inciderint. Clita munere id sea, in sed libris possit conceptam, tollit homero nominati usu ea. Eu eos cetero euripidis, tantas pertinacia reformidans duo ex. Eleifend indoctum pertinacia has te, qui in clita deserunt, te per vivendo adipisci." />

                    <TextView
                        android:id="@+id/tvFreqentlyBrought"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/productDetails"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Freqently Brought Together"
                        android:textColor="@color/black"
                        android:textSize="17sp" />


                    <ImageView
                        android:id="@+id/ivAccessImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_below="@+id/tvFreqentlyBrought"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_favorite_border_red_400_24dp" />

                    <TextView
                        android:id="@+id/tvAccName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvFreqentlyBrought"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toLeftOf="@+id/addToCart"
                        android:layout_toRightOf="@+id/ivAccessImage"
                        android:text="ProductName"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvAccName"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_toLeftOf="@+id/addToCart"
                        android:layout_toRightOf="@+id/ivAccessImage"
                        android:text="Model"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvModelPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvModel"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_toLeftOf="@+id/addToCart"
                        android:layout_toRightOf="@+id/ivAccessImage"
                        android:text="Model"
                        android:textColor="@color/md_red_300"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/addToCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tvAccName"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="-5dp"
                        android:src="@drawable/ic_add_shopping_cart_red_400_36dp" />


                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>